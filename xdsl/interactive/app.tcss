# SelectionList
#passes_selection_list { 
    margin: 1 1 1 1;
    border: heavy $warning-lighten-1;
    # border: heavy $accent;
    border-title-color: $primary;
    border-title-align: center;
    width: 80%;
    height: 90%;
    align: center middle;
}

# Button
#clear_selection_list_button{
}

# Horizontal(Button)
#clear_selection_list{
    height: 3;
    overflow-x: auto;
    margin: 1 1 1 1;
}

# Button
#copy_query_button{
}

# Horizontal(Button)
#copy_query{
    height: 3;
    overflow-x: auto;
    margin: 1 1 1 1;
}

# VerticalScroll(Horizontal(Button), Horizontal(Button))
#buttons_and_selection_list{
    layout: vertical;
    overflow-x: auto;
}

# Horizontal(SelectionList, VerticalScroll(Horizontal(Button), Horizontal(Button))))
#selection_list_and_button{
    margin: 1;
    # border-title-color: $primary;
    border-title-style: bold;
    border-title-align: center;
    layout: horizontal;
}


# Label
#selected_passes_label {
}

# ScrollableContainer(Label)
#selected_passes {
    margin: 1 1 1 1;
    border: heavy $warning-lighten-1;
    border-title-color: $primary;
    grid-columns: 75% 25%;
    border-title-align: center;
}

# Horizontal( SelectionList, ScrollableContainer(Label) )
#selected_passes_and_list_horizontal{
    height: 100%;
    layout: grid;
    grid-size: 2 1;
    grid-columns: 50% 50%;
}

# TextArea
#input{
}

# Button
#clear_input_button{
}

# Horizontal(Button)
#clear_input{
    height: 3;
    overflow-x: auto;
}

# Vertical(TextArea, Horizontal(Button))
#input_container {
    margin: 1;
    border: heavy $warning-lighten-1;
    border-title-color: $primary;
    border-title-align: center;
    # layout: vertical;
    # overflow: auto auto;
}

# OutputTextArea
#output{
    layout: vertical;
}

# Button
#copy_output_button{
}

# Horizontal(Button)
#copy_output{
    height: 3;
    overflow-x: auto;
    text-opacity: 60%;
}

# Container(OutputTextArea, Horizontal(Button))
#output_container {
    margin: 1;
    border: heavy $warning-lighten-1;
    border-title-color: $primary;
    border-title-align: center;
    layout: vertical;
    # overflow: auto auto;

}

# Horizontal( Vertical( TextArea, Horizontal(Button) )  , Container( OutputTextArea, Horizontal(Button) ) )
#input_output{
}

Screen {
    layout: grid;
    grid-size: 1;
    grid-rows: 45% 65%;
} 
