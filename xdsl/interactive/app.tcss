# SelectionList
#passes_selection_list { 
    margin: 1 0 0 1;
    border: heavy $warning-lighten-1;
    # border: heavy $accent;
    border-title-color: $primary;
    border-title-align: center;
    width: 100%;
    height: 100%;
    align: center middle;
}

# Button
#clear_selection_list_button{
}

# Horizontal(Button)
#clear_selection_list{
    height: 3;
    overflow-x: auto;
    margin: 1 1 1 1;
}

# Button
#copy_query_button{
}

# Horizontal(Button)
#copy_query{
    height: 3;
    overflow-x: auto;
    margin: 1 1 1 1;
}

# VerticalScroll(Horizontal(Button), Horizontal(Button))
#buttons_and_selection_list{
    overflow: hidden;
    margin: 1 0 0 1;
}

# Label
#selected_passes_label {
}

# ScrollableContainer(Label)
#selected_passes {
    margin: 1 1 1 1;
    border: heavy $warning-lighten-1;
    border-title-color: $primary;
    border-title-align: center;
    width: 100%;
    height: 100%;
}

# Horizontal(VerticalScroll (Horizontal(Button), Horizontal(Button))) , ScrollableContainer(Label))
#selection_list_and_button{
    # border-title-color: $primary;
    # border-title-style: bold;
    # border-title-align: center;
    layout: grid;
    grid-size: 2 1;
    grid-columns: 35% 65%;
    width: 100%;
    height: 100%;

}



# Horizontal(SelectionList, Horizontal)
#selected_passes_and_list_horizontal{
    height: 100%;
    width: 100%;
    # layout: grid;
    # grid-size: 2 1;
    # grid-columns: 75% 25%;
    layout: grid;
    grid-size: 2 1;
    grid-columns: 50% 50%;
    align-horizontal: center;

}

# TextArea
#input{
}

# Button
#clear_input_button{
}

# Horizontal(Button)
#clear_input{
    height: 3;
    overflow-x: auto;
}

# Vertical(TextArea, Horizontal(Button))
#input_container {
    margin: 1;
    border: heavy $warning-lighten-1;
    border-title-color: $primary;
    border-title-align: center;
}

# Button
#copy_output_button{
}

# Horizontal(Button)
#copy_output{
    height: 3;
    overflow-x: auto;
    text-opacity: 60%;
}

# Container(OutputTextArea, Horizontal(Button))
#output_container {
    margin: 1;
    border: heavy $warning-lighten-1;
    border-title-color: $primary;
    border-title-align: center;
    layout: vertical;
    # overflow: auto auto;

}

# Horizontal( Vertical( TextArea, Horizontal(Button) )  , Container( OutputTextArea, Horizontal(Button) ) )
#input_output{
}

Screen {
    layout: grid;
    grid-size: 1;
    grid-rows: 45% 65%;
} 
